extends layout

block content
    h1 Add New Message
    h3= message
    form(method="POST")
        div.form-group
            label(for="title") Title
            input(type="text" name="title" placeholder="Title of your message..." minLength="1" maxLength="100" required)
        div.form-group
            label(for="message") Message
            input(type="text" name="message" placeholder="Your message..." minLength="1" maxLength="100" required) 
        button.btn(type="submit") Submit 