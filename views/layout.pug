doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.header
    div
      p AuthClub 
    div
      if user && status === "non-member"
        a(href="/secret-form-member") Join Club
        a(href="/log-out") Log Out
      else if user && status === "member"
        a(href="/secret-form-admin") Join Admin
        a(href="/log-out") Log Out
      else if user && status === "admin"
        a(href="/log-out") Log Out
      else 
        a(href="/log-in") Log In
        a(href="/sign-up") Sign Up
    block content
