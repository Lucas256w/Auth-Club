extends layout

block content
    h1 Log In 
    form(method="POST")
        div.form-group
            label(for="username") Username
            input(type="text" name="username" placeholder="Username" required)
        div.form-group
            label(for="password") Password 
            input(type="password" name="password" placeholder="Password") 
        button.btn(type="submit") Login
    if error 
        p= error